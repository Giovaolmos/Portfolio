---
import ExperienceItem from './ExperienceItem.astro';
const EXPERIENCE = [
  {
    date: 'Febrero 2021 - Marzo 2024',
    title: 'Repartidor de mercadería.',
    company: 'Papelería Salomón.',
    description:
      'Jornada completa: Era el encargado de estructurar la ruta más óptima para los repartos diarios de la mercadería de la papelería y los realizaba en la camioneta de la empresa.',
  },
];
---

<ol class="relative mt-16">
  {
    EXPERIENCE.map((experience) => (
      <li class="">
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>
