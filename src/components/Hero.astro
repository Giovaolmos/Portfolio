---
const personalImageAlt = 'Giovanni Olmos';
import Badge from '@/components/Badge.astro';
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import MailIcon from '@/components/icons/Mail.astro';
import SocialPill from '@/components/SocialPill.astro';
import WhatsappIcon from './icons/Whatsapp.astro';
import GitHubIcon from './icons/GitHub.astro';
---

<div class="max-w-xl">
  <div class="flex items-center gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/yo-avatar.png"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/Giovaolmos"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
    <a
      href="/CV.pdf"
      download="Giovanni_Olmos_CV.pdf"
      class="flex items-center px-3 h-10 py-1 text-xs text-white bg-blue-400/80 rounded-lg hover:bg-blue-500 transition-all"
    >
      Descargar CV
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, Soy Giovanni Olmos.
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong>Desarrollador Web Full Stack</strong> y estudiante avanzado de <strong
    >
      Técnico Superior en Programación.</strong
    > De San Juan, Argentina.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="https://linkedin.com/in/Giovaolmos">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/Giovaolmos">
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill>
    <SocialPill href="mailto:giovaolmosdev@gmail.com">
      <MailIcon class="size-4" />
      giovaolmosdev@gmail.com
    </SocialPill>
    <SocialPill href="https://wa.me/5492646106910">
      <WhatsappIcon class="size-4" />
      +54 9 2646106910
    </SocialPill>
  </nav>
</div>
